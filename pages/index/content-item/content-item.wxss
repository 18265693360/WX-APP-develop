/* pages/index/content-item/content-item.wxss */
.content-item{
    border: 1rpx solid #eeeeee;
    margin-top: 20px;
}

.content-msg{
    display: flex;
    align-items: center;
    padding: 0 20px;
    /*flex布局*/
    /*text-align: center;*/
}

.content-msg .authorAvatar{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    /*margin-left: 12px;*/
}

/*元素需要随着手机的不同而改变用 rpx*/
/*元素不需要随着手机的不同而改变用 px*/


.content-item .content-title{
    font-size: 18px;
    color: #333;
    font-weight: 800;
    padding: 0 16px;
}

.content-msg .time{
    display: block;
    margin-left: 6px;
    font-size: 16px;
    color: #888888;
    margin-bottom: 18px;
}

.content-item .main-img{
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;
    margin-top: 10px;
    width: 100%;
    display: block;
}

.content-item .content-pre{
    line-height: 1.5;
    font-size: 12px;
    color: #888888;
    padding: 0 20px;
}